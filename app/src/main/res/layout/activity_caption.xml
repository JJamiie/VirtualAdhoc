<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jjamie.virtualadhoc.CaptionActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:minHeight="?attr/actionBarSize">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add message"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:padding="0dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                >
                <Button
                    android:id="@+id/edit_message"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:stateListAnimator="@null"
                    android:background="#265ea7"
                    style="?android:attr/borderlessButtonStyle"/>
                <ImageView
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/check"
                    android:background="#265ea7"/>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/appbar">

        <ImageView
            android:id="@+id/imageForCaption"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="#e1e0e0"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/gps_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/gps_button"
            android:layout_below="@+id/imageForCaption"
            android:layout_alignParentRight="true"
            android:clickable="true"
            />

        <EditText
            android:id="@+id/captionEditText"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/imageForCaption"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="#494848"
            android:hint="Write a message..."
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#353434"
            android:textColorHint="#494848" />

    </RelativeLayout>
</RelativeLayout>
